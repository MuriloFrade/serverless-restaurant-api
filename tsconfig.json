{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": false,
    "target": "es5",
    "lib": ["es6"],
    "types": ["reflect-metadata"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true
  },
  "files": [
    "./node_modules/@types/node/index.d.ts"
  ],
  "paths": {
    "*": [
      "node_modules/*",
      "src/types/*"
    ]
  },
  "include": [
    "src/**/*",
    "test-e2e/**/*",
    "package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}